<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="ltd.kaizo.realestatemanager.utils.BindingAdapter"/>
        <import type="ltd.kaizo.realestatemanager.utils.Converter"/>
        <variable name="estateViewModel" type="ltd.kaizo.realestatemanager.controller.ui.add.EstateViewModel"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/fragment_add_coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".controller.ui.add.EstateActivity">


            <TextView
                    android:id="@+id/fragment_add_media_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/media"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
            />
            <HorizontalScrollView
                    android:id="@+id/fragment_add_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_media_textview"
                    android:layout_marginTop="16dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fragment_add_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_cross_24dp_white"
                />
            </HorizontalScrollView>
            <TextView
                    android:id="@+id/fragment_add_description_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_media_textview"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_scrollview"/>
            <EditText
                    android:id="@+id/fragment_add_description_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_description_title_textview"
                    android:text="@={estateViewModel.description}"
                    android:hint="@string/description"/>
            <TextView
                    android:id="@+id/fragment_add_surface_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surface"
                    app:layout_constraintStart_toEndOf="@+id/fragment_add_surface_ic" android:layout_marginStart="40dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/fragment_add_location_title_textview"/>
            <EditText
                    android:id="@+id/fragment_add_surface_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={estateViewModel.surface}"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_surface_title_textview"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_surface_title_textview"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_add_nb_room_title_textview"
                    app:layout_constraintHorizontal_bias="0.464"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_surface_title_textview"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:id="@+id/fragment_add_nb_room_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_rooms"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_house_ic"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_add_house_ic"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/fragment_add_house_ic"
                    android:layout_marginStart="8dp"/>
            <Spinner
                    android:id="@+id/fragment_add_nb_room_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:selectedItemPosition="@={estateViewModel.nbRoom}"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_nb_room_title_textview"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_nb_room_title_textview"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_nb_room_title_textview"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_add_nb_bathroom_title_textview"
            />
            <TextView
                    android:id="@+id/fragment_add_nb_bathroom_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_bathrooms"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_bathroom_ic"
                    app:layout_constraintStart_toEndOf="@+id/fragment_add_bathroom_ic"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"/>
            <Spinner
                    android:id="@+id/fragment_add_nb_bathroom_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:selectedItemPosition="@={estateViewModel.nbBathroom}"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_nb_room_spinner"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_add_nb_bedroom_title_textview"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_nb_bathroom_title_textview"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_nb_room_spinner"/>
            <TextView
                    android:id="@+id/fragment_add_nb_bedroom_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_bedrooms"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_bedroom_ic"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_add_bedroom_ic"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/fragment_add_bedroom_ic"
                    android:layout_marginStart="8dp"

                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_nb_bathroom_title_textview"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <Spinner
                    android:id="@+id/fragment_add_nb_bedroom_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:selectedItemPosition="@={estateViewModel.nbBedroom}"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_nb_bathroom_spinner"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_nb_bedroom_title_textview"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_nb_bathroom_spinner"/>
            <EditText
                    android:id="@+id/fragment_add_location_edittext"
                    android:layout_width="136dp"
                    android:layout_height="63dp"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_location_title_textview"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_location_title_textview"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_location_title_textview"
                    android:text="@={estateViewModel.location}"
                    android:hint="@string/address"
                    android:inputType="text"/>

            <ImageView
                    android:id="@+id/fragment_add_surface_ic"
                    android:src="@drawable/ic_surface_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_description_edittext"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_description_edittext"/>
            <ImageView
                    android:id="@+id/fragment_add_house_ic"
                    android:src="@drawable/ic_house_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_surface_ic"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_surface_ic"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_surface_ic"/>
            <ImageView
                    android:id="@+id/fragment_add_bedroom_ic"
                    android:src="@drawable/ic_bedroom_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_bathroom_ic"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_bathroom_ic" android:layout_marginTop="44dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_bathroom_ic"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageView
                    android:id="@+id/fragment_add_location_ic"
                    android:src="@drawable/ic_location_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/fragment_add_location_title_textview"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_description_edittext"/>
            <TextView
                    android:id="@+id/fragment_add_location_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_location_ic"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_add_location_ic"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_description_edittext"
                    android:layout_marginEnd="72dp" app:layout_constraintVertical_bias="1.0"/>
            <TextView
                    android:id="@+id/fragment_add_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_location_edittext"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_location_edittext"
                    app:layout_constraintHorizontal_bias="0.489"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_nb_bathroom_title_textview"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_add_nb_bathroom_title_textview"/>
            <EditText
                    android:id="@+id/fragment_add_price_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="@={estateViewModel.price}"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_price_textview"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_price_textview"
                    app:layout_constraintHorizontal_bias="0.444"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_add_nb_bathroom_spinner"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_nb_bathroom_spinner"/>
            <ImageView
                    android:id="@+id/fragment_add_bathroom_ic"
                    android:src="@drawable/ic_bathroom_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_house_ic"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_house_ic" android:layout_marginEnd="8dp"
                    android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/fragment_add_house_ic"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <Button
                    android:id="@+id/fragment_add_create_button"
                    android:text="@string/create"
                    android:layout_width="83dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="64dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:onClick="@{() -> estateViewModel.createEstate()}"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_type_spinner"/>
            <TextView
                    android:id="@+id/fragment_add_type_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_price_textview"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_price_textview"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_nb_bedroom_title_textview"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_add_nb_bedroom_title_textview"/>
            <Spinner
                    android:id="@+id/fragment_add_type_spinner"
                    android:layout_width="wrap_content"
                    android:selectedItemPosition="@={estateViewModel.type}"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/fragment_add_nb_bedroom_spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_add_nb_bedroom_spinner"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_type_textview"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_type_textview"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>