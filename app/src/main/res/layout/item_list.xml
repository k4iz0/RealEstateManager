<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_profile_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
    tools:src="@mipmap/ic_launcher_round"/>

    <TextView
            android:id="@+id/item_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Penthouse" android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/item_profile_picture" android:layout_marginStart="8dp"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/item_location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Southampton"
            app:layout_constraintStart_toStartOf="@+id/item_type_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_type_textview" app:layout_constraintHorizontal_bias="0.277"
            app:layout_constraintBottom_toTopOf="@+id/item_price_textview" android:layout_marginBottom="8dp"/>
    <TextView
            android:id="@+id/item_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$13,999,000" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_type_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_type_textview"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
</androidx.constraintlayout.widget.ConstraintLayout>