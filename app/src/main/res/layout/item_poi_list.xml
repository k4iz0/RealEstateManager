<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/poi_list_cardview"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:focusable="true"
        android:clickable="true"
        app:cardCornerRadius="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/poi_item_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="28dp"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/border_line"
                android:tint="@color/colorPrimary"
                android:contentDescription="@string/logo"
                tools:src="@drawable/outline_school_black_48" android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/poi_item_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:text="school"
                app:layout_constraintTop_toBottomOf="@+id/poi_item_imageview"
                app:layout_constraintEnd_toEndOf="@+id/poi_item_imageview"
                android:gravity="center"
                style="@style/titleTextView"
                app:layout_constraintStart_toStartOf="@+id/poi_item_imageview"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>