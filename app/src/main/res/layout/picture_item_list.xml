<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/picture_list_cardview"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:focusable="true"
        android:clickable="true"
         app:cardCornerRadius="5dp"
        android:layout_margin="3dp"
       >
<FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <ImageView
                android:id="@+id/picture_item_list_photo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                tools:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/logo"/>
        <ImageButton
                android:id="@+id/picture_item_favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart_empty_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/logo"
        />
         <ImageButton
                android:id="@+id/picture_item_remove_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove_red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/logo"
        />
        <TextView
                android:id="@+id/picture_item_list_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="kitchen"
                style="@style/titleTextView"
                app:layout_constraintBottom_toBottomOf="@+id/picture_item_list_photo"
                app:layout_constraintEnd_toEndOf="@+id/picture_item_list_photo"
                app:layout_constraintStart_toStartOf="@+id/picture_item_list_photo"
                android:background="@color/greyTransparent"
                android:paddingBottom="8dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</androidx.cardview.widget.CardView>