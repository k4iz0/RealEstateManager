<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/picture_detail_list_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@mipmap/ic_launcher"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/logo"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:id="@+id/picture_detail_list_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="kitchen"
                    style="@style/bigTitleTextView"
                    app:layout_constraintBottom_toBottomOf="@+id/picture_detail_list_photo"
                    app:layout_constraintEnd_toEndOf="@+id/picture_detail_list_photo"
                    app:layout_constraintStart_toStartOf="@+id/picture_detail_list_photo"
                    android:background="@color/greyTransparent"

            />

        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>