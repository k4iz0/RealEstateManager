<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--DIALOG-->
    <style name="customDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:padding">8dp</item>
    </style>

    <!--TOOLBAR-->
    <style name="ToolBarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="LoginTheme"/>

    <!--loan editText-->
    <style name="loanEditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/border_line</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">10</item>
    </style>

    <!--title-->
    <style name="titleTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--title search-->
    <style name="titleSearchTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--sold textView-->
    <style name="soldTextView">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--button-->
    <style name="ButtonMaterialStyleBlue" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!--BIG title-->
    <style name="bigTitleTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
